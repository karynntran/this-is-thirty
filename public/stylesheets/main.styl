body
	font-family 'Poiret One', cursive
	margin 0

p, li
	font-size 16px
	margin 0px
	
// landing page

.hero-container
	width 100%
	height 450px
	margin 0 auto
	background-color black
	background-image url(../images/landing.jpg)
	background-size cover
	background-position 10% 71%
	color white
	
.hero-text, .hero-description
	text-align center
	margin-top 0px
	position relative

.hero-text
	top 100px
	font-size 120px
	font-family 'Oleo Script', cursive


.hero-description
	top 80px
	font-size 20px
	
.about-container
	margin 0 auto
	width 100%
	height 20%
	color black
	text-align center

.quick-glance-ul
	margin 0 auto
	padding 10px 0 10px 0
	width 80%
	display table
	table-layout fixed

.quick-glance-li
	display table-cell
	margin 0 auto
	padding 20px
	color #191970
	font-size 15px
	position relative
	font-weight bold

.home-nav
	font-size 23px
	
.marker-container
	width 80%
	height 20px
	margin 0 auto
	
#marker
	border-radius 50%
	background-color #191970
	height 20px
	width 20px
	border 10px solid #F0F0F0
	position absolute
	transition all 1s
	
.quick-description-container
	width 80%
	height 150px
	margin 0 auto
	text-align left
	background-color #F0F0F0
	border-radius 10px

.quick-description-text
	padding 50px
	font-size 20px
	text-align center

//monthly photo pages

.main-content
	background-color #F0F0F0
	width 100%
	height auto

.main-images
	width 90%
	padding-top 50px
	margin 0 auto

.month-title
	font-size 35px
	text-align center
	margin 20px 0
	color #191970
	font-weight bold
	
.monthly-photos
	height 200px
	width 200px
	border-radius 2px
	border 2px solid black
	margin 10px
	
.polaroid-container
	background-color white
	border 1px solid black
	width 220px
	height 275px
	margin 10px
	display inline-block
	
.description p
	text-align center
	font-size 20px
	font-family 'Waiting for the Sunrise', cursive