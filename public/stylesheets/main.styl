body
	font-family helvetica
	margin 0

p, li
	font-size 16px
	margin 0px
	
// landing page

.hero-container
	width 100%
	margin 0 auto
	background-color black
	background-image url(../images/landing.jpg)
	background-size cover
	background-position 10% 71%
	color white
	height 450px
	
.hero-text, .hero-description
	text-align center
	margin-top 0px
	position relative

.hero-text
	top 100px
	font-size 100px

.hero-description
	top 125px
	font-size 20px
	
.about-container
	margin 0 auto
	width 100%
	height 100px
	background-color white
	color black
	text-align center

.quick-glance-ul
	margin 50px auto
	padding 0
	width 90%

.quick-glance-li
	display inline
	margin 0 auto
	padding 20px
	color purple
	font-size 20px
	border-bottom 2px solid gray
	
.marker-container
	width 90%
	margin 0 auto
	
#marker
	border-radius 50%
	background-color purple
	height 20px
	width 20px
	position absolute
	
.quick-description-container
	width 75%
	height 200px
	margin 0 auto
	text-align left
	background-color lightgray
	border-radius 10px

.quick-description-text
	padding 50px