body
	font-family helvetica
	margin 0

p, li
	font-size 16px
	margin 0px
	
// landing page

.hero-container
	width 100%
	margin 0 auto
	background-color black
	background-image url(../images/landing.jpg)
	background-size cover
	background-position 10% 71%
	color white
	height 450px
	
.hero-text, .hero-description
	text-align center
	margin-top 0px
	position relative

.hero-text
	top 100px
	font-size 100px

.hero-description
	top 125px
	font-size 20px
	
.about-container
	margin 0 auto
	width 100%
	height 100px
	background-color white
	color black
	text-align center

.quick-glance-ul
	margin 50px auto 0 auto
	padding 0
	width 80%
	display table
	table-layout fixed

.quick-glance-li
	display table-cell
	margin 0 auto
	padding 20px
	color purple
	font-size 20px
	position relative
	
.marker-container
	width 80%
	height 20px
	margin 0 auto
	
#marker
	// border-radius 50%
	// width 20px
	// height 20px
	// background-color purple
	width 0; 
	height 0; 
	border-left 20px solid transparent;
	border-right 20px solid transparent;
	border-bottom: 20px solid lightgray;
	position absolute
	transition all 1s
	
.quick-description-container
	width 80%
	height 200px
	margin 0 auto
	text-align left
	background-color lightgray
	border-radius 10px

.quick-description-text
	padding 50px